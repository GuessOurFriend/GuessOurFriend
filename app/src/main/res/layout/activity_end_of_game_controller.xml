<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="inc.guessourfriend.EndOfGameController"
    android:id="@+id/chosen_fbprofilepic">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rematch"
        android:id="@+id/rematch_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="YOU WIN!!"
        android:id="@+id/win_lose_text"
        android:layout_below="@+id/rematch_button"
        android:layout_alignRight="@+id/rematch_button"
        android:layout_alignEnd="@+id/rematch_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You chose:"
        android:id="@+id/textView2"
        android:layout_below="@+id/win_lose_text"
        android:layout_alignRight="@+id/win_lose_text"
        android:layout_alignEnd="@+id/win_lose_text" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:adjustViewBounds="false"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/confirm_button"
        android:layout_alignStart="@+id/confirm_button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/chosen_name"
        android:text="FirstName LastName"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your mystery friend:"
        android:id="@+id/mystery_text"
        android:layout_below="@+id/mystery_friend_name"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_below="@+id/mystery_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="FirstName LastName"
        android:ems="10"
        android:id="@+id/mystery_friend_name"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/chosen_name"
        android:layout_alignStart="@+id/chosen_name" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingbar_opponent"
        android:numStars="5"
        android:rating="5"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/confirm_button"
        android:layout_below="@+id/ratingbar_opponent"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rate how fun it was to play with:"
        android:id="@+id/textView3"
        android:layout_below="@+id/chosen_name"
        android:layout_alignRight="@+id/ratingbar_opponent"
        android:layout_alignEnd="@+id/ratingbar_opponent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name_of_opponent"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/mystery_text"
        android:layout_alignStart="@+id/mystery_text"
        android:layout_alignRight="@+id/mystery_text"
        android:layout_alignEnd="@+id/mystery_text" />

</RelativeLayout>
