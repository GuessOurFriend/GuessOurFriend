<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="inc.guessourfriend.EndOfGameController">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rematch"
        android:id="@+id/rematch_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="YOU WIN!"
        android:id="@+id/win_lose_text"
        android:layout_alignBottom="@+id/rematch_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You chose:"
        android:id="@+id/textView2"
        android:layout_below="@+id/rematch_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/chosen_name"
        android:text="FirstName LastName"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        android:gravity="center_vertical|center_horizontal" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your mystery friend:"
        android:id="@+id/mystery_text"
        android:layout_above="@+id/mystery_friend_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="FirstName LastName"
        android:ems="10"
        android:id="@+id/mystery_friend_name"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/chosen_name"
        android:layout_alignStart="@+id/chosen_name"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingbar_opponent"
        android:numStars="5"
        android:rating="5"
        android:layout_above="@+id/confirm_button"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/confirm_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rate how fun it was to play with:"
        android:id="@+id/textView3"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name_of_opponent"
        android:id="@+id/textView4"
        android:layout_above="@+id/ratingbar_opponent"
        android:layout_alignLeft="@+id/mystery_text"
        android:layout_alignStart="@+id/mystery_text" />

</RelativeLayout>
